{% extends '::base.html.twig' %}
{% block title %}
    {{ service.name }} в Минске.
{% endblock title %}
{% block breadcrumbs %}
    <a href="{{ path('homepage') }}">Главная</a> /
    <a href="{{ path('service_list', {'serviceGroupSlug': service.serviceGroup.slug}) }}">{{ service.serviceGroup.name }}</a> /
    {{ service.name }}
{% endblock breadcrumbs %}
{% block content %}
        <h1>
            {{ block('title') }}
        </h1>
        {{ service.getDescription|raw() }}
            <script type="text/javascript"><!--
                document.write(VK.Share.button(false,{type: "custom", text: "<img height='21' src=\"http://vk.com/images/vk32.png?1\" />"}));
                --></script>

        <div class="fb-like" data-href="{{ path('service_show', {'serviceGroupSlug': service.serviceGroup.slug, 'serviceSlug': service.slug}) }}" data-layout="button" data-action="like" data-show-faces="false" data-share="false"></div>

{% endblock content %}
{% block side %}
        {% if articles or additional%}
                <br/>
                {% if articles %}
                    {% include '_articles.html.twig' with {'title': 'СТАТЬИ В ТЕМУ', 'articles': articles} %}
                {% endif %}
                {% if additional %}
                    {% include '_articles.html.twig' with {'title': 'ВАС ТАКЖЕ ЗАИНТЕРЕСУЕТ', 'articles': additional} %}
                {% endif %}
        {% endif %}
{% endblock side %}